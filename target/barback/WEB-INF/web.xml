<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
              http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">

    <display-name>Barback</display-name>
    <!--security filter-->
    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>by.epam.learn.daryatarasevich.barback.filter.SecurityFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
<!--encoding filter-->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.epam.learn.daryatarasevich.barback.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- welcome files -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!-- error pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/views/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.RuntimeException</exception-type>
        <location>/views/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/views/error.jsp</location>
    </error-page>
    <!-- controller servlet -->
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>by.epam.learn.daryatarasevich.barback.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <!-- login jsp -->
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/views/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!-- add bartender jsp -->
    <servlet>
        <servlet-name>AddBartenderForm</servlet-name>
        <jsp-file>/views/administrator/addbartenderform.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBartenderForm</servlet-name>
        <url-pattern>/addbartenderform</url-pattern>
    </servlet-mapping>
    <!-- add cocktail jsp -->
    <servlet>
        <servlet-name>AddCocktailForm</servlet-name>
        <jsp-file>/views/administrator/addcocktailform.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCocktailForm</servlet-name>
        <url-pattern>/addcocktailform</url-pattern>
    </servlet-mapping>
    <!-- cocktail page jsp -->
    <servlet>
        <servlet-name>CocktailPage</servlet-name>
        <jsp-file>/views/cocktailpage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CocktailPage</servlet-name>
        <url-pattern>/cocktailpage</url-pattern>
    </servlet-mapping>
    <!-- add ingredient form jsp -->
    <servlet>
        <servlet-name>AddIngredientForm</servlet-name>
        <jsp-file>/views/administrator/addingredientform.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddIngredientForm</servlet-name>
        <url-pattern>/addingredientform</url-pattern>
    </servlet-mapping>
    <!-- add user form jsp -->
    <servlet>
        <servlet-name>AddUserForm</servlet-name>
        <jsp-file>/views/administrator/adduserform.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUserForm</servlet-name>
        <url-pattern>/adduserform</url-pattern>
    </servlet-mapping>
    <!-- list of bartenders jsp -->
    <servlet>
        <servlet-name>ListOfBartenders</servlet-name>
        <jsp-file>/views/administrator/listofbartenders.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListOfBartenders</servlet-name>
        <url-pattern>/listofbartenders</url-pattern>
    </servlet-mapping>
    <!-- list of ingredients jsp -->
    <servlet>
        <servlet-name>ListOfIngredients</servlet-name>
        <jsp-file>/views/administrator/listofingredients.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListOfIngredients</servlet-name>
        <url-pattern>/listofingredients</url-pattern>
    </servlet-mapping>
    <!-- list of users jsp -->
    <servlet>
        <servlet-name>ListOfUsers</servlet-name>
        <jsp-file>/views/administrator/listofusers.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListOfUsers</servlet-name>
        <url-pattern>/listofusers</url-pattern>
    </servlet-mapping>
    <!-- update bartender form jsp -->
    <servlet>
        <servlet-name>UpdateBartenderForm</servlet-name>
        <jsp-file>/views/administrator/updatebartenderform.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateBartenderForm</servlet-name>
        <url-pattern>/updatebartenderform</url-pattern>
    </servlet-mapping>
    <!-- update cocktail form jsp -->
    <servlet>
        <servlet-name>UpdateCocktailForm</servlet-name>
        <jsp-file>/views/administrator/updatecocktailform.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCocktailForm</servlet-name>
        <url-pattern>/updatecocktailform</url-pattern>
    </servlet-mapping>
    <!-- update ingredient form jsp -->
    <servlet>
        <servlet-name>UpdateIngredientForm</servlet-name>
        <jsp-file>/views/administrator/updateingredientform.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateIngredientForm</servlet-name>
        <url-pattern>/updateingredientform</url-pattern>
    </servlet-mapping>
    <!-- update user form jsp -->
    <servlet>
        <servlet-name>UpdateUserForm</servlet-name>
        <jsp-file>/views/administrator/updateuserform.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateUserForm</servlet-name>
        <url-pattern>/updateuserform</url-pattern>
    </servlet-mapping>
    <!-- delete account jsp -->
    <servlet>
        <servlet-name>DeleteAccount</servlet-name>
        <jsp-file>/views/deleteaccount.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAccount</servlet-name>
        <url-pattern>/deleteaccount</url-pattern>
    </servlet-mapping>
    <!-- error page jsp -->
    <servlet>
        <servlet-name>ErrorPage</servlet-name>
        <jsp-file>/views/error.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorPage</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <!-- help page jsp -->
    <servlet>
        <servlet-name>HelpPage</servlet-name>
        <jsp-file>/views/help.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelpPage</servlet-name>
        <url-pattern>/help</url-pattern>
    </servlet-mapping>
    <!-- list of cocktails jsp -->
    <servlet>
        <servlet-name>ListOfCocktails</servlet-name>
        <jsp-file>/views/listofcocktails.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListOfCocktails</servlet-name>
        <url-pattern>/listofcocktails</url-pattern>
    </servlet-mapping>
    <!-- main jsp -->
    <servlet>
        <servlet-name>Main</servlet-name>
        <jsp-file>/views/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <!-- register jsp -->
    <servlet>
        <servlet-name>Register</servlet-name>
        <jsp-file>/views/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!-- cocktail to approve jsp -->
    <servlet>
        <servlet-name>cocktailtoapprovepage</servlet-name>
        <jsp-file>/views/administrator/cocktailtoapprovepage.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>cocktailtoapprovepage</servlet-name>
        <url-pattern>/cocktailtoapprovepage</url-pattern>
    </servlet-mapping>
    <!-- index jsp -->
    <servlet>
        <servlet-name>Index</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <!-- listofsuggestedcocktails jsp -->
    <servlet>
        <servlet-name>listofsuggestedcocktails</servlet-name>
        <jsp-file>/views/listofsuggestedcocktails.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>listofsuggestedcocktails</servlet-name>
        <url-pattern>/listofsuggestedcocktails</url-pattern>
    </servlet-mapping>
    <!-- suggest cocktail jsp -->
    <servlet>
        <servlet-name>suggestcocktail</servlet-name>
        <jsp-file>/views/suggestcocktail.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>suggestcocktail</servlet-name>
        <url-pattern>/suggestcocktail</url-pattern>
    </servlet-mapping>
    <!-- create cocktail jsp -->
    <servlet>
        <servlet-name>createcocktail</servlet-name>
        <jsp-file>/views/bartender/createcocktail.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>createcocktail</servlet-name>
        <url-pattern>/createcocktail</url-pattern>
    </servlet-mapping>
    <!-- list of created cocktails jsp -->
    <servlet>
        <servlet-name>listofcreatedcocktails</servlet-name>
        <jsp-file>/views/bartender/listofcreatedcocktails.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>listofcreatedcocktails</servlet-name>
        <url-pattern>/listofcreatedcocktails</url-pattern>
    </servlet-mapping>
    <!--session lifespan-->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
